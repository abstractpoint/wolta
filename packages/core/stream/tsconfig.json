{
  "compilerOptions": {
    "lib": ["es2019"],
    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@/config/*": ["config/*"],
      "@/test/*": ["test/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules/**"]
}
